{
  "name": "react-grab-copilot",
  "displayName": "React Grab Copilot",
  "description": "VS Code extension to expose Copilot as an agent server",
  "version": "0.0.1",
  "publisher": "react-grab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/borgius/react-grab-copilot.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-grab-copilot.helloWorld",
        "title": "Hello World"
      }
    ],
    "chatParticipants": [
      {
        "id": "react-grab-copilot.participant",
        "name": "react-grab",
        "description": "Ask React Grab Copilot for help",
        "isSticky": true
      }
    ],
    "tools": [
      {
        "name": "react-grab-copilot.grabTaskCompleted",
        "description": "Signal that the task is completed",
        "inputSchema": {
          "type": "object",
          "properties": {
            "requestId": {
              "type": "string",
              "description": "The ID of the request that is completed"
            }
          }
        }
      }
    ],
    "configuration": {
      "title": "React Grab Copilot",
      "properties": {
        "reactGrabCopilot.port": {
          "type": "number",
          "default": 6567,
          "description": "Port to listen on for the agent server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "vite build",
    "watch": "vite build --watch",
    "compile": "tsc -p ./",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.14"
  }
}
